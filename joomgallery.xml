<?xml version="1.0" encoding="utf-8"?>
<extension method="upgrade" type="plugin" group="content">
    <name>JoomGalleryPlugin</name>
    <version>1.0</version>
    <description>PLG_CONTENT_JOOMGALLERY_DESC</description>
    <author>JoomGallery::ProjectTeam</author>
    <authorEmail>team@joomgalleryfriends.net</authorEmail>
    <authorUrl>https://www.joomgalleryfriends.net/</authorUrl>
    <creationDate>2024-4-27</creationDate>
    <copyright>(C) 2024 JoomGallery::ProjectTeam</copyright>
    <license>GNU General Public License version 3 or later</license>
    <namespace path="src">My\Plugin\Content\Joomgallery</namespace>
    <files>
        <folder plugin="joomgallery">services</folder>
        <folder>src</folder>
        <folder>language</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/JoomGalleryPlugin.ini</language>
        <language tag="en-GB">language/en-GB/JoomGalleryPlugin.sys.ini</language>
    </languages>
    <config>
      <fields name="params">
         <fieldset name="basic">
            <field name="accept_legacy_tags"
               type="radio"
               class="btn-group btn-group-yesno"
               default="0"
               description="PLG_JGALLERY_ACCEPT_LEG_TAGS"
               label="PLG_JGALLERY_ACCEPT_LEG_TAGS_LABEL"
            >
               <option value="0">JNO</option>
               <option value="1">JYES</option>
            </field>
          </fieldset>
       </fields>
    </config>
</extension>

